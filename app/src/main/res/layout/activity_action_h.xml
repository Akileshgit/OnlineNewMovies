
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161515"
    tools:context=".HindiActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/ek"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/romantic"
            android:src="@drawable/ek" />

        <ImageView
            android:id="@+id/darna"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_toRightOf="@+id/ek"

            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/darna" />

        <ImageView
            android:id="@+id/jakson"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/ek"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/jakson" />

        <ImageView
            android:id="@+id/mumbai"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/darna"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/jakson"
            android:src="@drawable/mumbai" />


        <ImageView
            android:id="@+id/don"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/mumbai"
            android:layout_marginLeft="23dp"
            android:layout_toRightOf="@+id/sherka"

            android:layout_marginTop="14dp"
            android:src="@drawable/don" />


        <ImageView
            android:id="@+id/sherka"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/jakson"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/nobody"
            android:src="@drawable/sherka" />
        <ImageView
            android:id="@+id/sivaji"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/sherka"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/nobody"
            android:src="@drawable/sivaji" />

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ad_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="31dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-1004938905667780/7558390584"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintStart_toStartOf="parent">

        </com.google.android.gms.ads.AdView>

    </RelativeLayout>
</ScrollView>