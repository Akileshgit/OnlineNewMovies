<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161515"
    tools:context=".EnglishActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/honeymoon"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/romantic"
            android:src="@drawable/honeymoon" />

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_toRightOf="@+id/honeymoon"

            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/wedding" />

        <ImageView
            android:id="@+id/duff"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/honeymoon"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/thriller"
            android:src="@drawable/duff" />

        <ImageView
            android:id="@+id/summer"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/favorite"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/duff"
            android:src="@drawable/summer" />


        <ImageView
            android:id="@+id/sexy"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/duff"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/thriller"
            android:src="@drawable/sexy" />


        <ImageView
            android:id="@+id/beauty"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/summer"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/sexy"
            android:src="@drawable/beauty" />


        <ImageView
            android:id="@+id/surrogate"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/sexy"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/thriller"
            android:src="@drawable/surrogate" />


        <ImageView
            android:id="@+id/fire"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/beauty"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/surrogate"
            android:src="@drawable/fire" />


        <ImageView
            android:id="@+id/powerplay"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/surrogate"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/thriller"
            android:src="@drawable/pwerplay" />


        <ImageView
            android:id="@+id/winterweekend"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/fire"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/powerplay"
            android:src="@drawable/winter" />

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ad_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="31dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-1004938905667780/7558390584"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintStart_toStartOf="parent">

        </com.google.android.gms.ads.AdView>

    </RelativeLayout>
</ScrollView>